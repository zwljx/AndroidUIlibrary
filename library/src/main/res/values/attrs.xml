<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoginView">
        <attr name="logo"></attr>
        <attr name="account_icon" format="reference"></attr>
        <attr name="pwd_icon" format="reference"></attr>
        <attr name="login_btn_text" format="string"></attr>
        <attr name="login_btn_background" format="reference|color"></attr>
        <attr name="login_btn_textSize" format="dimension"></attr>
        <attr name="login_btn_textColor" format="color"></attr>
    </declare-styleable>
    <declare-styleable name="HoverMenu">
        <attr name="position" format="integer"></attr>
        <attr name="shape" format="integer"></attr>
        <attr name="length" format="dimension"></attr>
    </declare-styleable>
    <declare-styleable name="SpringIndicator">

        <!--tab text color -->
        <attr name="siTextColor" format="reference"/>

        <!--tab text color which is selected-->
        <attr name="siSelectedTextColor" format="reference"/>

        <!--tab item bg -->
        <attr name="siTextBg" format="reference"/>

        <!--tab text size-->
        <attr name="siTextSize" format="dimension"/>

        <!--indicator bg color-->
        <attr name="siIndicatorColor" format="reference"/>

        <!--indicator bg colors. should equals your titles count-->
        <attr name="siIndicatorColors" format="reference"/>

        <!--max indicator radius-->
        <attr name="siRadiusMax" format="dimension"/>

        <!--min indicator radius when moving-->
        <attr name="siRadiusMin" format="dimension"/>

    </declare-styleable>
    <declare-styleable name="SatelliteMenu">
        <attr name="expandDuration" format="integer" />
        <attr name="closeOnClick" format="boolean" />
        <attr name="totalSpacingDegree" format="float" />
        <attr name="satelliteDistance" format="dimension" />
        <attr name="mainImage" format="reference" />
    </declare-styleable>
</resources>
